<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/ListItem"
                                             android:backgroundTint="#19000000" android:background="#000000">

    <TextView
            android:text="Post description"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="italic" android:background="#00000000"/>
    <ImageView
            android:layout_width="394dp"
            android:layout_height="140dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="6dp"
            android:scaleType="centerCrop" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Post name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="334dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="#000000" android:textStyle="bold"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_map_black_24dp"
            android:id="@+id/imageButtonMap"
            style="@style/Widget.AppCompat.ImageButton" android:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_chat_bubble_black_24dp"
            android:id="@+id/imageButtonComment"
            style="@style/Widget.AppCompat.ImageButton" android:backgroundTint="@color/colorAccent"
            app:layout_constraintStart_toEndOf="@+id/imageButtonLike"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_favorite_black_24dp"
            android:id="@+id/imageButtonLike"
            style="@style/Widget.AppCompat.ImageButton" android:backgroundTint="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/textView6"/>
</android.support.constraint.ConstraintLayout>
