<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorBackground"
                                             tools:context=".LoginScreen.LoginScreen"
                                             tools:layout_editor_absoluteY="81dp">

    <EditText
            android:id="@+id/Email_Text_Box"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Username" android:layout_alignParentTop="true"
            android:layout_above="@+id/Password_Text_Box" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginTop="308dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <EditText
            android:id="@+id/Password_Text_Box"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="28dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_above="@+id/Login_button"
            android:layout_marginTop="372dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"/>

    <Button
            android:id="@+id/Login_button"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorAccent"
            android:text="LOG IN"
            android:textColor="@android:color/background_light"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Password_Text_Box"/>

    <TextView
            android:text="Don't have an account?Sign Up!"
            android:layout_width="201dp"
            android:layout_height="22dp" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:id="@+id/Signup_link"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/Login_button"
            android:linksClickable="true" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/Login_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:autoLink="all|none"
            android:background="?attr/selectableItemBackground"/>

    <ImageView
            android:id="@+id/AppLogo"
            android:layout_width="436dp"
            android:layout_height="234dp"
            android:layout_marginStart="8dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.636"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/applogodesign"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/Email_Text_Box"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.411"/>

</android.support.constraint.ConstraintLayout>